<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_main"
    android:orientation="vertical"
    tools:context=".fragment.main.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20sp"
        android:layout_marginBottom="40sp"
        android:background="@drawable/head_profile"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="130dp"
            android:layout_margin="5sp"
            app:cardCornerRadius="190sp"
            android:elevation="10dp"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/profile_img"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/imgprofile" />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/text"
                android:fontFamily="@font/montserratbold"
                android:textStyle="bold"
                android:text="Nattawut \nChitsaad"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/text"
                        android:text="Clothes"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="32"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:textSize="20sp"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:textSize="12sp"
                        android:textColor="@color/text"
                        android:textStyle="bold"
                        android:text="Follower"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1127"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:textSize="20sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5sp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10sp"
                        android:layout_gravity="center"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@color/text"
                        android:text="Following"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="832"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/main"
                        android:textSize="20sp"/>

                </LinearLayout>



            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp"
        android:background="@drawable/base_button2"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_baseline_settings_24"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="S E T T I N G"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp"
        android:weightSum="1"
        android:background="@drawable/base_button2"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_gravity="center"
            android:layout_weight="0.2"
            android:src="@drawable/ic_light_dark"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="15sp"
            android:text="L I G H T / D A R K"/>


        <com.github.angads25.toggle.widget.DayNightSwitch
            android:id="@+id/switch_mode"
            android:layout_width="50sp"
            android:layout_height="30sp"
            android:layout_marginLeft="10sp"
            android:layout_gravity="center"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/btn_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp"
        android:background="@drawable/base_button2"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:weightSum="1"
        android:layout_marginBottom="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:src="@drawable/ic_language"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:textSize="15sp"
            android:text="L A N G U A G E"/>


        <TextView
            android:id="@+id/title_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENG"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/text"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20sp"
        android:background="@drawable/base_button2"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_marginBottom="10sp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:src="@drawable/ic_log_out"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:fontFamily="@font/montserratbold"
            android:textColor="@color/text"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="L O G O U T"/>


    </LinearLayout>



</LinearLayout>